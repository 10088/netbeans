<project name="launchers" default="build-source-zip" basedir="." xmlns:if="ant:if" xmlns:unless="ant:unless">

    <fail message="Please build using Ant 1.9.8 or higher.">
        <condition>
            <not>
                <antversion atleast="1.9.8"/>
            </not>
        </condition>
    </fail>

    <import file="../default.xml"/>

    <target name="build-source-zip"
            depends="set-buildnumber"
            description="Packages sources needed to compile launchers">
        <property name="buildnum" value="${buildnumber}"/>
        <zip zipfile="${nb.build.dir}/netbeans-windows-launchers-src-${buildnum}.zip" duplicate="preserve">
            <zipfileset dir="${nb_all}">
                <include name="nbbuild/**" />
                <include name="harness/apisupport.harness/windows-launcher-src/**" />
                <include name="nb/ide.launcher/windows/**" />
                <include name="platform/o.n.bootstrap/launcher/windows/**" />
                <exclude name="*/build/"/>
                <exclude name="nbbuild/netbeans/**"/>
            </zipfileset>
            <zipfileset file="${nb_all}/LICENSE"/>
            <zipfileset file="${nb_all}/NOTICE"/>
        </zip>
    </target>

    <target name="build-launchers" depends="set-buildnumber">
        <property name="launchers.dest.dir" location="${nb.build.dir}/launchers/windows" />
        <mkdir dir="${launchers.dest.dir}" />
        <exec executable="make" dir="${nb_all}/harness/apisupport.harness/windows-launcher-src/">
            <arg value="-f"/>
            <arg value="Makefile.mingw"/>
        </exec>
        <copy todir="${launchers.dest.dir}" overwrite="true">
            <fileset dir="${nb_all}/harness/apisupport.harness/windows-launcher-src/" includes="app*.exe"/>
        </copy>
        <exec executable="make" dir="${nb_all}/nb/ide.launcher/windows">
            <arg value="-f"/>
            <arg value="Makefile.mingw"/>
        </exec>
        <copy todir="${launchers.dest.dir}" overwrite="true">
            <fileset dir="${nb_all}/nb/ide.launcher/windows" includes="netbeans*.exe"/>
        </copy>
        <exec executable="make" dir="${nb_all}/platform/o.n.bootstrap/launcher/windows">
            <arg value="-f"/>
            <arg value="Makefile.mingw"/>
        </exec>
        <copy todir="${launchers.dest.dir}" overwrite="true">
            <fileset dir="${nb_all}/platform/o.n.bootstrap/launcher/windows" includes="nbexec*.exe"/>
            <fileset dir="${nb_all}/platform/o.n.bootstrap/launcher/windows" includes="nbexec*.dll"/>
        </copy>
        <zip zipfile="${nb.build.dir}/netbeans-windows-launchers-bin-${buildnum}.zip" duplicate="preserve">
            <zipfileset dir="${launchers.dest.dir}" includes="**"/>
            <zipfileset file="${nb_all}/LICENSE"/>
            <zipfileset file="${nb_all}/NOTICE"/>
        </zip>
    </target>

    <target name="build-and-publish" depends="build-source-zip,build-launchers">
        <zip file="${nb.build.dir}/netbeans-windows-launchers-javadoc-${buildnum}.zip">
            <zipfileset file="javadoc.txt"/>
        </zip>
        <property name="build.maven.repo" location="${nb.build.dir}/.m2" />
        <exec dir="${basedir}" executable="mvn" failonerror="true">
            <arg line="deploy:deploy-file -Dfile=${nb.build.dir}/netbeans-windows-launchers-bin-${buildnum}.zip -Djavadoc=${nb.build.dir}/netbeans-windows-launchers-javadoc-${buildnum}.zip -Dsources=${nb.build.dir}/netbeans-windows-launchers-src-${buildnum}.zip -DgroupId=org.apache.netbeans.launchers -DartifactId=windows-launchers -Dversion=${buildnum} -Dpackaging=jar -DgeneratePom=true -DaltDeploymentRepository=temp::default::file://${build.maven.repo} -Durl=file://${build.maven.repo}" />
        </exec>
    </target>
</project>
